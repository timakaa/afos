generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int        @id @default(autoincrement())
  telegramId                Int        @unique
  username                  String?
  coins                     Int        @default(0)
  coinsBalance              Int        @default(0)
  userPacks                 UserPack[]
  packs                     Pack[]
  photos                    Photo[]
  referrals                 User[]     @relation("Refferals")
  referredBy                User?      @relation("Refferals", fields: [referredById], references: [id])
  referredById              Int?
  tasks                     Task[]
  energy                    Int        @default(500)
  multitapLevelIndex        Int        @default(0)
  energyLimitIndex          Int        @default(0)
  lastCoinsUpdateTimestamp  BigInt
  lastEnergyUpdateTimestamp BigInt
  createdAt                 BigInt
}

model Task {
  id             Int    @id @default(autoincrement())
  name           String @unique
  reward         Int
  usersCompleted User[]
}

model Pack {
  id          Int        @id @default(autoincrement())
  previewUrl  String
  name        String
  usersBought User[]
  userPacks   UserPack[]
  photos      Photo[]
}

model UserPack {
  id           Int     @id @default(autoincrement())
  packInstance Pack    @relation(fields: [packId], references: [id])
  packId       Int
  user         User    @relation(fields: [userId], references: [id])
  userId       Int
  photos       Photo[]
}

model Photo {
  id          Int        @id @default(autoincrement())
  url         String
  usersBought User[]
  userPacks   UserPack[]
  pack        Pack?      @relation(fields: [packId], references: [id])
  packId      Int?
}
